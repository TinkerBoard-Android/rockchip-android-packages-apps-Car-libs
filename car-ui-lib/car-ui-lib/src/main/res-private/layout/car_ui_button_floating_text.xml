<!-- We need this FrameLayout to add bottom padding so the shadow fully shows up -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="4dp"
    android:clipToPadding="false">
    <TextView
        android:id="@+id/car_ui_button_text_view"
        android:layout_height="72dp"
        android:layout_width="wrap_content"
        android:minWidth="156dp"
        android:tag="car_ui_button_background_view"
        android:gravity="center"
        android:background="@drawable/car_ui_button_floating_background"
        android:elevation="4dp"
        android:drawableTint="@color/car_ui_button_floating_foreground_color"
        android:textAppearance="@style/TextAppearance.CarUiButton.Floating"
        android:drawablePadding="0dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"/>
</FrameLayout>
